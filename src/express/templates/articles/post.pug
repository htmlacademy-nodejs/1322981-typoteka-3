extend ../blocks/layout.pug
block main
  main
    section.post
      h1.visually-hidden Пост
      section.post__content
        h2.visually-hidden Основное содержание
        .post__wrapper
          .post__head
            a(href="#").post__backwards.button.button--backwards Назад
            time(datetime=articlesPost.createDate).post__date #{articlesPost.createDate}
            h2.post__title.title.title--main #{articlesPost.title}
            include ../blocks/theme-list.pug
            +theme-list(categories, 'post__themes')
          .post__picture
            img(src="/img/sea-fullsize@1x.jpg" alt="пейзаж море, скалы, пляж")
          .post__text
            h3 Бирюзовое доверие #{articlesPost.announce}
            p #{articlesPost.fullText}
      .post__wrapper.post__wrapper--comments
        section.post__comments.comments
          h2.comments__title.title.title--middle Комментарии
          ul.comments__list
            each comment in articlesPost.comments
              li.comments__comment
                .comments__avatar.avatar
                  img(src=comment.avatarBig alt="Аватар пользователя")
                .comments__text
                  .comments__head
                    p #{comment.name} •
                    time.comments__date(datetime=comment.time) #{comment.time}
                  .comments__message #{comment.text}
          .comments__footer.comments__footer--user
            form(action="#" method="POST")
              .comments__avatar.avatar
                img(src="/img/avatar-2.png" alt="аватар пользователя")
              label
                textarea(rows="1" placeholder="Присоединиться к обсуждению")
              button(type="submit").comments__button.button.button--colored Опубликовать
