extend ../blocks/layout.pug
block main
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action="/search" method="get")
            label
              input(type="text" placeholder="Что ищем?")
            button(type="submit").search__button.button.button--transparent Найти
          .search__result
            if results.length
              each result in results
                time.search__date(datetime=result.createDate) #{result.createDate}
                a(href='#').search__link #{result.announce}
